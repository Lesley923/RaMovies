extends base 

block content
    .container
        h2 Edit Movie
        form(method="POST" action=`/v1/movie/edit/${movie.slug}`)
            .form-group
                label(for="title") Title
                input#title.form-control(type="text" name="title" value=movie.title required)

            .form-group
                label(for="year") Year
                input#year.form-control(type="number" name="year" value=movie.year required)

            .form-group
                label(for="genre") Genre
                input#genre.form-control(type="text" name="genre" value=movie.genre required)

            .form-group
                label(for="director") Director
                input#director.form-control(type="text" name="director" value=movie.director required)

            .form-group
                label(for="actors") Actors
                textarea#actors.form-control(name="actors" required) #{movie.actors.join('\n')}

            .form-group
                label(for="rating") Rating
                input#rating.form-control(type="number" step="0.1" name="rating" value=movie.rating required)

            .form-group
                label(for="poster_url") Poster URL
                input#poster_url.form-control(type="url" name="poster_url" value=movie.poster_url required)

            .form-group
                label(for="description") Description
                textarea#description.form-control(name="description" rows="10" required)  #{movie.description}

            button.btn.btn-primary(type="submit") Update Movie
