header.header 
    nav.nav.nav--movies 
        a.nav__el(href='/') All Movies 
    .header__logo 
        img(src='/img/logo.png' alt='Movies')
    nav.nav.nav--user    
        if user 
            a.nav__el.nav__el--logout Log out
            a.nav__el(href=user.role === 'admin' ? '/v1/movie' : '/me') 
                //- img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`) 
                //- span= user.name.split(' ')[0]  
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`User Photo`) 
                span= user.username.split(' ')[0] + ' | ' + user.role
                
        else  
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='/signup') Sign up 
        