extends base


block content 

    main.main 
        .card-container 

            each movie in movies
                .card 
                    .card__header 
                        .card__picture 
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src='https://upload.wikimedia.org/wikipedia/en/6/67/Forrest_Gump_poster.jpg', alt=`${movie.name}`)  
                            //- 本作业内图片路径为http链接，后续需修改 src=`${movie.imageCover}`
                        h3.heading-tertirary 
                            span Forrest Gump 

                    .card__details 
                        h4.card__sub-heading I'm still thinking about it 
                        //-  =`${movie.xxx}` 以上
                        p.card__text= movie.description 
                        .card__data 
                            svg.card__icon 
                                use(xlink:href='img/icons.svg#icon-map-pin')
                            span category 
                        .card__data
                            svg.card__icon 
                                use(xlink:href='img/icons.svg#icon-calendar')
                            span data(on screen)
                        .card__data 
                            svg.card__icon 
                                use(xlink:href='img/icons.svg#icon-flag')
                            span director
                        .card__data 
                            svg.card__icon 
                                use(xlink:href='img/icons.svg#icon-user')
                            span actor 

                    .card__footer 
                        p 
                            span.card__footer-value $222
                            | 
                            span.card__footer-text per person 
                        p.card__ratings  
                            span.card__footer-value 4.9
                            | 
                            span.card__footer-text rating (21)
                        a.btn.btn--green.btn--small(href='/movie/${movie.slug}') Details 