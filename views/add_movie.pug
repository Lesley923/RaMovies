extends base

block content
    .container
        h2 Add New Movie
        form(method="POST" action="/admin/addmovie")
            .form-group
                label(for="title") Title
                input#title.form-control(type="text" name="title" required)

            .form-group
                label(for="year") Year
                input#year.form-control(type="number" name="year"  required)

            .form-group
                label(for="genre") Genre
                input#genre.form-control(type="text" name="genre"  required)

            .form-group
                label(for="director") Director
                input#director.form-control(type="text" name="director"  required)

            .form-group
                label(for="actors") Actors
                textarea#actors.form-control(name="actors" required) Type each actor on a new line

            .form-group
                label(for="rating") Rating
                input#rating.form-control(type="number" step="0.1" name="rating" required)

            .form-group
                label(for="poster_url") Poster URL
                input#poster_url.form-control(type="url" name="poster_url" required)

            .form-group
                label(for="description") Description
                textarea#description.form-control(name="description" rows="4" required)

            button.btn.btn-primary(type="submit") Add Movie
