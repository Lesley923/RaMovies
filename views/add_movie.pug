extends base 

block content
    .add-page
        .container_add_movie
            .add-heading
                h2.admin-heading-primary Add New Movie
            form(method="POST" action="/v1/movie/add")
                .add_form-group
                    label.add_form_label(for="title") Title
                    input#title.add_form-control(type="text" name="title" required)

                .add_form-group
                    label.add_form_label(for="year") Year
                    input#year.add_form-control(type="number" name="year"  required)

                .add_form-group
                    label.add_form_label(for="genre") Genre
                    input#genre.add_form-control(type="text" name="genre"  required)

                .add_form-group
                    label.add_form_label(for="director") Director
                    input#director.add_form-control(type="text" name="director"  required)

                .add_form-group
                    label.add_form_label(for="actors") Actors
                    textarea#actors.add_form-control(name="actors" required) Type each actor on a new line

                .add_form-group
                    label.add_form_label(for="rating") Rating
                    input#rating.add_form-control(type="number" step="0.1" name="rating" required)

                .add_form-group
                    label.add_form_label(for="poster_url") Poster URL
                    input#poster_url.add_form-control(type="url" name="poster_url" required)

                .add_form-group
                    label.add_form_label(for="description") Description
                    textarea#description.add_form-control(name="description" rows="4" required)
                .add-botton
                    button.admin_btn.admin_btn-primary(type="submit") Add Movie

