extends base

block content
    .user-detail-container

        .user_information
            .detail-title
                h2.user-username #{doc.username}
                img.user-photo(src=doc.photo, alt=doc.username)
                p.user-email Email: &nbsp; #{doc.email}
                p.user-follows Follows: &nbsp; #{doc.follows}
                p.user-was_followed Was Followed: &nbsp; #{doc.was_followed}
                p.user-registration_date Registration Date: &nbsp; #{doc.registration_date}
            .detail-button
                a.admin_btn.admin_btn-primary(href="/v1/user/") Back to Manage

 
