extends base

block content
    .edit-page
        .edit-container
            .admin-edit-title 
                h1.admin-heading-primary Edit Review
            form(method="POST" action=`/edit/review/${review._id}`)
                .edit-form-group
                    label(for="movie_title") Movie Title
                    p.edit-review-title #{review.movie_id.title}
                
                .edit-form-group
                    label(for="rating") Rating
                    input#rating.form-control(type="number" name="rating" min="1" max="10" step="0.1" value=review.rating required)

                .edit-form-group
                    label(for="content") Review Content
                    textarea#content.form-control(name="content" required) #{review.content}

                .edit-button
                    button.admin_btn.admin_btn-primary(type="submit") Update Review
