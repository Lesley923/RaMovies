section.section-review-form
  .review-form-container
    h2.heading-secondary Add your review
    form.review-form(action=`/review/${movieId}` method="POST")
      .form-group
        label(for="rating") Rating:
        input#rating.form-control(type="number" name="rating" min="1" max="10" step="0.1"  required)
      .form-group
        label(for="content") Review content:
        textarea#content.form-control(name="content" rows="5")
      .form-group
        button.btn.btn--green(type="submit") Submit Review
